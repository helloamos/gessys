<%= form_with(model: product, local: true) do |form| %>
 <div class="c-modal__body">
     <ul class="errors">
      </ul>

  <div class="c-field u-mb-small">
    <%= form.label :name , class: "c-field__label" %>
    <%= form.text_field :name, id: :product_name, class: "c-input", placeholder: "Adresse" %>
  </div>

  <div class="c-field u-mb-small">
    <%= form.label :unity_id , class: "c-field__label" %>
    <%= form.text_field :unity_id, id: :product_unity_id , class: "c-input", placeholder: "Adresse" %>
  </div>

  <div class="c-field u-mb-small">
    <%= form.label :unit_price , class: "c-field__label" %>
    <%= form.text_field :unit_price, id: :product_unit_price , class: "c-input", placeholder: "Adresse" %>
  </div>

  <div class="c-field u-mb-small">
    <%= form.label :deposit_id, class: "c-field__label" %>
    <%= form.text_field :deposit_id, id: :product_deposit_id , class: "c-input", placeholder: "Adresse" %>
  </div>

 

  <div class="c-field u-mb-small">
    <%= form.label :product_category_id , class: "c-field__label" %>
    <%= form.text_field :product_category_id, id: :product_product_category_id , class: "c-input", placeholder: "Adresse" %>
  </div>

  

  <div class="c-field u-mb-small">
    <%= form.label :reorder_threshold, class: "c-field__label"  %>
    <%= form.number_field :reorder_threshold, id: :product_reorder_threshold, class: "c-input", placeholder: "Adresse" %>
  </div>

  </div><!-- modal body -->
            <div class="c-modal__footer">
                    <%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
                    <%= form.submit "Enregistrer", class: "c-btn c-btn--success",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
            </div>
<% end %>
