



<table class="c-table" id="datatable">
  <caption class="c-table__title">
        Clients <small>Powered by DataTables</small>
        <div class="c-right">
          <%= link_to 'New Customer', new_customer_path, class: "c-btn c-btn--info", remote: true %>
        </div>
  </caption>
  <thead class="c-table__head c-table__head--slim">
    <tr class="c-table__row">
      <th class="c-table__cell c-table__cell--head no-sort">Full name</th>
      <th class="c-table__cell c-table__cell--head">Address</th>
      <th class="c-table__cell c-table__cell--head">City</th>
      <th class="c-table__cell c-table__cell--head">Country</th>
      <th class="c-table__cell c-table__cell--head">Phone</th>
      <th class="c-table__cell c-table__cell--head no-sort">Actions</th>
    </tr>
  </thead>

  <tbody class="customers">
    <%= render 'index' %>
  </tbody>
</table>

<div id="customer-modal" class="c-modal modal fade" data-backdrop="static"></div>

