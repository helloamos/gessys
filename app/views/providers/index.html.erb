<table class="c-table" id="datatable">
  <caption class="c-table__title">
        Fournisseurs <small>Liste</small>
        <div class="c-right">
          <%= link_to 'Ajouter ', new_provider_path, class: "c-btn c-btn--info", remote: true %>
        </div>
  </caption>
  <thead class="c-table__head c-table__head--slim">
    <tr class="c-table__row">
      <th class="c-table__cell c-table__cell--head">Name</th>
      <th class="c-table__cell c-table__cell--head">Address</th>
      <th class="c-table__cell c-table__cell--head">City</th>
      <th class="c-table__cell c-table__cell--head">Country</th>
      <th class="c-table__cell c-table__cell--head">Phone</th>
      <th class="c-table__cell c-table__cell--head">Email</th>
      <th class="c-table__cell c-table__cell--head">Actions</th>
    </tr>
  </thead>

  <tbody class="providers">
    <%= render 'index' %>
  </tbody>
</table>
<div id="provider-modal" class="c-modal modal fade" data-backdrop="static"></div>
