<p id="notice"><%= notice %></p>

<h1>Stock Movements</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Movement type</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_movements.each do |stock_movement| %>
      <tr>
        <td><%= stock_movement.reference %></td>
        <td><%= stock_movement.movement_type %></td>
        <td><%= stock_movement.status %></td>
        <td><%= stock_movement.user %></td>
        <td><%= link_to 'Show', stock_movement %></td>
        <td><%= link_to 'Edit', edit_stock_movement_path(stock_movement) %></td>
        <td><%= link_to 'Destroy', stock_movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

