<table class="c-table" id="datatable">
  <caption class="c-table__title">
        Mouvements de stock <small>Liste</small>
        <div class="c-right">
          <%= link_to 'Ajouter ', new_stock_movement_path, class: "c-btn c-btn--info", remote: true %>
        </div>
  </caption>
  <thead class="c-table__head c-table__head--slim">
    <tr class="c-table__row">
      <th class="c-table__cell c-table__cell--head">Reference</th>
      <th class="c-table__cell c-table__cell--head">Movement type</th>
      <th class="c-table__cell c-table__cell--head">Status</th>
      
      <th class="c-table__cell c-table__cell--head no-sort">Actions</th>
    </tr>
  </thead>

  <tbody class="stock-movements">
    <%= render 'index' %>
  </tbody>
</table>

<div id="stock-movement-modal" class="c-modal modal fade" data-backdrop="static"></div>
